generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

model Usuarios {
  id            Int      @id @default(autoincrement())
  nombre        String
  correo        String   @unique
  contrasena    String
  perfil        String   @default("https://res.cloudinary.com/dkgmldgwu/image/upload/v1734611036/fotos_perfil/wysgb8bofsube6sekut7.webp")
  fechaCreacion DateTime @default(now())
  tareas        Tareas[]
}

model Tareas {
  id          Int       @id @default(autoincrement())
  titulo      String
  cintenido   String
  stado       String    @default("pending") // Estados: pending, in_progress, completed
  fechaCreado DateTime  @default(now())
  fechaFinal  DateTime?
  idUsuario   Int
  usuario     Usuarios  @relation(fields: [idUsuario], references: [id])
}
