generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  status    String   @default("pending") // Estados: pending, in_progress, completed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      Users    @relation(fields: [userId], references: [id])
}
